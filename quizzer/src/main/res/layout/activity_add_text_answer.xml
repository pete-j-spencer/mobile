<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.spencer.quizzer.view.AddTextAnswerActivity">

    <TextView
        android:id="@+id/addTextAnswerEnterTextLabel"
        android:text="Type the correct answer below:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/addTextAnswerEnterText"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/addTextAnswerEnterTextLabel"/>

    <CheckBox
        android:id="@+id/addTextAnswerCaseSensitiveCheckbox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/addTextAnswerEnterText"/>
    <TextView
        android:text="Is this answer case sensitive?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addTextAnswerEnterText"
        android:layout_toRightOf="@id/addTextAnswerCaseSensitiveCheckbox"/>

    <Button
        android:text="Save Answer"
        android:onClick="saveAnswer"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/addTextAnswerEnterTextLabel"/>

</RelativeLayout>
