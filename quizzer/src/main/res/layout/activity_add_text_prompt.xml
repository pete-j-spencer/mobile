<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.spencer.quizzer.view.AddTextPromptActivity">

    <TextView
        android:id="@+id/addTextPromptEditTextLabel"
        android:text="Type the question prompt below (e.g. What color is an apple?):"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/addTextPromptEditText"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/addTextPromptEditTextLabel"/>

    <Button
        android:text="Save Prompt"
        android:onClick="savePrompt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/addTextPromptEditTextLabel"/>

</RelativeLayout>
